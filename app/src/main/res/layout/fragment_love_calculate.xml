<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragments.LoveCalculateFragment">

    <ImageView
        android:id="@+id/iv_love_calculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/image_love_calculate" />

    <TextView
        android:id="@+id/tv_tittle_love"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/allerta"
        android:text="Love Calculator"
        android:textColor="@color/purple_500"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/tv_tittle_first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingStart="10dp"
        android:text="First Name"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/et_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounding_edit_text"
        android:hint="You"
        android:padding="5dp"
        android:paddingStart="15dp"
        android:textColorHint="@color/black" />

    <TextView
        android:id="@+id/tv_tittle_second_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingStart="10dp"
        android:text="Second Name"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/et_second_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounding_edit_text"
        android:hint="Me"
        android:padding="5dp"
        android:paddingStart="15dp"
        android:textColorHint="@color/black" />

    <Button
        android:id="@+id/btn_calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:background="@drawable/rounding_button"
        android:fontFamily="@font/allerta"
        android:paddingHorizontal="50dp"
        android:text="Calculate"
        android:textColor="@color/black" />

</LinearLayout>